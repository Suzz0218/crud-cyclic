<%- include("layout/header") %>

<div class="main main-height">
  <% if (notify) { %>
  <div class="box">
    <div class="m_wrapper">
      <div class="wrapper_modal">
        <div class="wrapper_modal-dialog">
          <div class="wrapper_modal-content">
            <div class="wrapper_modal-body"><%= notify.message %></div>
            <a
              href="/article/<%= article._id %> "
              class="btnc btnc-danger modal_btn"
              >Back</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <% } %>
  <div class="container sub-height">
    <div class="row">
      <div class="col-lg-8 m-auto">
        <div class="py-6">
          <div class="m-auto">
            <div class="py-2 my-2 overflow-hidden">
              <div class="container">
                <div class="row">
                  <div class="col-lg-4 col-md-12 col-sm-12 profile_justify">
                    <img
                      src="/<%= article.user.image %>"
                      class="avatar"
                      alt="profile"
                    />
                    <h3 class="mt-4 fw-600">
                      Created by <%= article.createdBy %>
                    </h3>
                  </div>
                  <div class="col-lg-8 col-md-12">
                    <div class="my-4">
                      <h3 class="text-dark px-2 py-2 fw-600">
                        <%= article.headLine %>
                      </h3>
                    </div>
                    <div class="my-4">
                      <h3 class="text-dark px-2 py-2 fw-600">
                        <%= article.subHead%>
                      </h3>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="py-2 my-2 overflow-hidden">
              <div class="container">
                <div class="row">
                  <div class="col-md-12">
                    <textarea
                      class="form-control"
                      rows="12"
                      id="comment"
                      name="comment"
                    >
<%= article.content%></textarea
                    >
                  </div>
                  <div class="col-md-12">
                    <div class="btnc-position">
                      <% if (message) { %>
                      <a
                        href="/myarticles/<%= message.user._id %> "
                        class="btnc btnc-secondary my-2 mr-4"
                      >
                        View all your articles here</a
                      >
                      <a
                        href="/write/<%= message.user._id %> "
                        class="btnc btnc-secondary my-2 mr-4"
                      >
                        Write article</a
                      >
                      <% } else{%>

                      <a href="/signup " class="btnc btnc-secondary my-2 mr-4">
                        Write article</a
                      >
                      <a href="/" class="btnc btnc-secondary my-2 mr-4">
                        Back</a
                      >
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("layout/footer") %>
