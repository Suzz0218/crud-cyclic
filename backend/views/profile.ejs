<%- include("layout/header") %>

<div class="main main-height">
  <div class="modal" id="myModal" role="dialog ">
    <div class="m_wrapper">
      <div class="wrapper_modal">
        <div class="wrapper_modal-dialog">
          <div class="wrapper_modal-content">
            <div class="wrapper_modal-body">
              Do you want to continue update your profile?
            </div>
            <div class="modal_btn">
            <a href="/updateprofile/<%= message.user._id %>" class="btnc btnc-primary my-2">Update profile</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container sub-height">
    <div class="row">
      <div class="col-lg-6 m-auto">
        <section class="position-relative pt-20 pb-28">
          <div class="">
            <div class="col-lg-12 col-md-6 bg-white p-8">
          
                <div class="row">
                  <% if (message) { %>
                  <h1 class="text-dark text-center py-4 text-lead">
                    <%= message.user.fname +" "+ message.user.lname %>
                  </h1>
                  <% } %>
                  <div class="col-lg-12">
                    <% if (message) { %>
                    <div class="col-lg-4 col-md-12 col-sm-12 profile_center">
                      <img
                        src="/<%= message.user.image %> "
                        alt=""
                        class="mt-4 avatar"
                      />
                    </div>

                    <% } %>

                    <div class="col-lg-8 col-md-12 col-sm-12 pl-4">
                      <div class="col-md-12 col-sm-12 pl-4">
                        <div class="my-4"><span class="fw-600">First Name:</span>
                         <span class="text-dark px-2 py-2 fw-600">
                        <%= message.user.fname %>
                         </span>
                        </div>
                      </div>
                      <div class="col-md-12 col-sm-12 pl-4">
                        <div class="my-4">
                          <div class="my-4"><span class="fw-600">Last Name:</span>
                         <span class="text-dark px-2 py-2 fw-600">
                        <%= message.user.lname %>
                         </span>
                        </div>
                      </div>
                      <div class="col-md-12 col-sm-12">
                        <div class="my-4">
                          <div class="my-4"><span class="fw-600">Email:</span>
                         <span class="text-dark px-2 py-2 fw-600">
                            <%= message.user.email %>
                          </span>                         
                        </div>
                      </div>
                      

                      <div class="btnc-position col-md-12 col-sm-12 pl-4">
                        <button
                          type="button"
                          class="btnc btnc-primary my-2 mr-4"
                          data-bs-toggle="modal"
                          data-bs-target="#myModal"
                        >Update this account</button>
                        <a href="/" class="btnc btnc-primary-text my-2">Home page</a>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<%- include("layout/footer") %>
