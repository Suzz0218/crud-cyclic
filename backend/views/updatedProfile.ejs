<%- include("layout/header") %>

<div class="main main-height">
  <div class="modal" id="myModal" role="dialog ">
    <div class="m_wrapper">
      <div class="wrapper_modal">
        <div class="wrapper_modal-dialog">
          <div class="wrapper_modal-content">
            <div class="wrapper_modal-body">
              Once it's confirmed, this cannnot be undone.<br />Would you like
              to delete this article?
            </div>
            <div class="modal_btn">
              <a href="/updateprofile/<%= message.user._id %>" class="btnc btnc-secondary">Cancel</a>
              <a
                href="/delete/profile/<% if (message) { %><%=message.user._id%>"<%}%>class="btnc btnc-danger">Delete</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container sub-height">
    <div class="row">
      <div class="col-lg-6 m-auto">
        <section class="position-relative pt-20 pb-28">
          <div class="">
            <div class="col-lg-12 col-md-6 bg-white p-8">
              <form
                action="<%=message.user._id%>"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="row">
                  <% if (message) { %>
                  <h1 class="text-dark text-center py-4 text-lead">
                    <%= message.user.fname +" "+ message.user.lname %>
                  </h1>
                  <% } %>
                  <div class="col-12 d-flex">
                    <% if (message) { %>
                    <div class="col-4 profile_center">
                      <img
                        src="/<%= message.user.image %> "
                        alt=""
                        id="image"
                        class="mt-4 avatar"
                      />
                      <label for="file" class="btnc btnc-secondary"
                        >Upload</label
                      >
                      <input type="file" name="image" id="file"  hidden />
                      <input type="hidden" name="old_image"  value="<%=message.user.image %>" />
                    </div>

                    <% } else {%>
                    <div class="col-4 profile_center">
                      <img
                        src="/assets/ic-profile.png"
                        class="avatar"
                        id="image"
                        alt="profile"
                      />
                      <label for="file" class="btnc btnc-secondary"
                        >Upload</label
                      >
                      <input type="file" name="image" id="file" hidden />
                    </div>
                    <% } %>

                    <div class="col-8 pl-4">
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="text"
                            name="fname"
                            placeholder="First name"
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="text"
                            name="lname"
                            placeholder="Last name"
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="email"
                            name="email"
                            placeholder="Email address"
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="password"
                            name="password"
                            placeholder="Password"
                          />
                        </div>
                      </div>

                      <div class="btnc-position">
                        <button
                          type="button"
                          class="btnc btnc-danger-text my-2 mr-4"
                          data-bs-toggle="modal"
                          data-bs-target="#myModal"
                        >
                          Delete this account
                        </button>
                        <input
                          type="submit"
                          value="Update"
                          class="btnc btnc-primary my-2"
                          aria-required="true"
                          required
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<%- include("layout/footer") %>
