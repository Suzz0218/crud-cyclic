<%- include("layout/header") %>

<div class="main main-height position-relative">
  <% if (notify && notify.success === true) { %>
  <div class="box">
    <div class="m_wrapper">
      <div class="wrapper_modal">
        <div class="wrapper_modal-dialog">
          <div class="wrapper_modal-content">
            <div class="wrapper_modal-body"><%= notify.message %></div>
            <a href="/" class="btnc btnc-primary modal_btn">Continue</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%} %> <%if(notify && notify.success === false) {%>
  <div class="box">
    <div class="m_wrapper">
      <div class="wrapper_modal">
        <div class="wrapper_modal-dialog">
          <div class="wrapper_modal-content">
            <div class="wrapper_modal-body"><%= notify.message %></div>
            <a href="/signup" class="btnc btnc-danger modal_btn">Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
  <div class="container sub-height">
    <div class="row">
      <div class="col-lg-8 m-auto">
        <section class="position-relative pt-20 pb-28">
          <div class="flex main-flex">
            <div class="col-md-6 bg-white w-400 p-8">
              <form action="signup" method="post" enctype="multipart/form-data">
                <div class="row">
                  <h1 class="text-dark text-center py-4 text-lead">
                    Are you a first time user?
                  </h1>
                  <div class="col-12 d-flex">
                    <% if (message) { %>
                    <div class="col-4 profile_center">
                      <img
                        src="/<%= message.user.image %> "
                        alt="Avatar"
                        class="mt-4 avatar"
                      />
                    </div>
                    <% } else {%>
                    <div class="col-4 profile_center">
                      <img
                        src="/assets/ic-profile.png"
                        class="avatar"
                        id="image"
                        alt="profile"
                      />
                      <label for="file" class="btnc btnc-secondary"
                        >Upload</label
                      >
                      <input type="file" name="image" id="file" hidden />
                    </div>
                    <% } %>

                    <div class="col-8 pl-4">
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="text"
                            name="fname"
                            required
                            aria-required="true"
                            placeholder="First name"
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="text"
                            name="lname"
                            required
                            aria-required="true"
                            placeholder="Last name"
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="email"
                            name="email"
                            placeholder="Email address"
                            aria-required="true"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="my-4">
                          <input
                            class="text-dark px-2 py-2 w-100 form-input"
                            type="password"
                            name="password"
                            placeholder="Password"
                            aria-required="true"
                            required
                          />
                        </div>
                      </div>
                      <div class="btnc-position">
                        <input
                          type="submit"
                          value="Sign Up"
                          class="btnc btnc-primary my-2"
                          aria-required="true"
                          required
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-lg-6 bg-white p-8 w-400 position-relative">
              <form action="signin" method="post">
                <div class="row">
                  <h1 class="text-dark text-center mt-10 mb-10 pb-4 text-lead">
                    Do you already have an account?
                  </h1>
                  <div class="col-12">
                    <div class="col-12">
                      <div class="my-4">
                        <input
                          class="text-dark px-2 py-2 w-100 form-input"
                          type="email"
                          name="email"
                          placeholder="Email address"
                          aria-required="true"
                          required
                        />
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="my-4">
                        <input
                          class="text-dark px-2 py-2 w-100 form-input"
                          type="password"
                          name="password"
                          placeholder="Password"
                          aria-required="true"
                          required
                        />
                      </div>
                    </div>

                    <div class="btnc-position px-16 py-8">
                      <input
                        type="submit"
                        value="Sign In"
                        class="btnc btnc-primary"
                      />
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<%- include("layout/footer") %>
